


# Trading Automation Platform - Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# FLASK APPLICATION SETTINGS
# =============================================================================
FLASK_ENV=production
SECRET_KEY=your-super-secret-key-here-change-this-in-production
DEBUG=False

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://trading:your_db_password@postgres:5432/trading_db
POSTGRES_DB=trading_db
POSTGRES_USER=trading
POSTGRES_PASSWORD=your_secure_db_password_here

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=your_redis_password_here

# =============================================================================
# ALPACA TRADING API KEYS (REQUIRED)
# Get these from: https://alpaca.markets/
# =============================================================================

# Paper Trading (for testing)
ALPACA_PAPER_KEY=your_alpaca_paper_key_here
ALPACA_PAPER_SECRET=your_alpaca_paper_secret_here

# Live Trading (for production)
ALPACA_LIVE_KEY=your_alpaca_live_key_here
ALPACA_LIVE_SECRET=your_alpaca_live_secret_here

# =============================================================================
# AWS CONFIGURATION (Optional - for S3 backups and SNS alerts)
# =============================================================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1
S3_BACKUP_BUCKET=trading-platform-backups

# SNS Topics for alerts
SNS_CRITICAL_TOPIC_ARN=arn:aws:sns:us-east-1:123456789:trading-critical
SNS_PERFORMANCE_TOPIC_ARN=arn:aws:sns:us-east-1:123456789:trading-performance

# =============================================================================
# DOMAIN AND SSL CONFIGURATION
# =============================================================================
DOMAIN=your-domain.com
SSL_EMAIL=admin@your-domain.com

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
DEFAULT_RISK_AMOUNT=100.00
MAX_POSITION_SIZE=1000
ENABLE_LIVE_TRADING=false

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================
LOG_LEVEL=INFO
ENABLE_METRICS=true
BACKUP_RETENTION_DAYS=30

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
CORS_ORIGINS=https://your-domain.com,http://localhost:3000

# =============================================================================
# WEBHOOK CONFIGURATION
# =============================================================================
WEBHOOK_SECRET=your_webhook_secret_for_tradingview
WEBHOOK_TIMEOUT=30

# =============================================================================
# DEVELOPMENT SETTINGS (only for local development)
# =============================================================================
# Uncomment these for local development
# FLASK_ENV=development
# DEBUG=True
# DATABASE_URL=sqlite:///trading_platform.db



